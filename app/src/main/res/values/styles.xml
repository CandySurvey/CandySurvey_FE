<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  텍스트 : 16sp / bold / Secondary Text -->
    <style name="bold_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#333D4B</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  공통 : 페이지 이름 텍스트 스타일  -->
    <style name="pageTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/typo_ssigothic150</item>
    </style>

    <!--  로그인 페이지 : 아이디 비밀번호 제목 텍스트 스타일  -->
    <style name="loginIdPwTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/typo_ssigothic150</item>
    </style>

    <!--  로그인 페이지 : 아이디/비밀번호 찾기 텍스트 스타일  -->
    <style name="loginIdPwFind">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:fontFamily">@font/typo_ssigothic150</item>
    </style>

    <!--  로그인 페이지 버튼 텍스트 스타일  -->
    <style name="loginBtnText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/typo_ssigothic130</item>
    </style>

</resources>