<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/mypage_modal_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/modalText"
        android:text="정말 변경하시겠습니까?"
        android:textAppearance="@style/myPageModalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="28dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yesBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/mypage_modal_btn"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="예"
            android:textAppearance="@style/myPageModalBtnText" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/noBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/mypage_modal_btn"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="아니오"
            android:textAppearance="@style/myPageModalBtnText" />

    </LinearLayout>

</LinearLayout>
<!-- 따로 xml 파일 만들어 적용해도 되지 않는데, 수정해야함 -->