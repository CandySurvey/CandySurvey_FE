<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/survey_item_radius">

        <ImageView
            android:id="@+id/randomImage"
            android:src="@drawable/dummyimage1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/surveyTitle"
                    android:text="짜장면 대용으로 가장 적절한 음식은 무엇인가요?"
                    android:textAppearance="@style/mainpageSurveyText"
                    android:lineSpacingExtra="6sp"
                    android:layout_width="wrap_content"
                    android:layout_height="32sp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/makeSurveyTime"
                    android:text="2023년 3월 9일"
                    android:textAppearance="@style/mainpageSurveyEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/surveyParticipants"
                    android:text="78명 참여"
                    android:textAppearance="@style/mainpageSurveyEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="right">

            <ImageButton
                android:src="@drawable/share1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="2dp"/>

            <ImageButton
                android:src="@drawable/link"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="2dp"/>

            <ImageButton
                android:src="@drawable/edit"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="2dp"/>

            <ImageButton
                android:src="@drawable/delete"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="2dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>